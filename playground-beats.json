{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "landingPage": "/beats-playground/",
  "preferredVersions": {
    "php": "8.2",
    "wp": "6.5"
  },
  "steps": [
    {
      "step": "runPHP",
      "code": "echo 'Blueprint started' . PHP_EOL;",
      "capture": true
    },
    {
      "step": "runPHP",
      "code": "echo 'Downloading plugin ZIP' . PHP_EOL;",
      "capture": true
    },
    {
      "step": "installPlugin",
      "pluginZipUrl": "https://codeload.github.com/crystalthedeveloper/wordpress-plugin-beats-upload-player/zip/refs/heads/main",
      "capture": true
    },
    {
      "step": "runPHP",
      "code": "echo 'Plugin ZIP installed' . PHP_EOL;",
      "capture": true
    },
    {
      "step": "runPHP",
      "code": "echo 'Activating plugin' . PHP_EOL;",
      "capture": true
    },
    {
      "step": "activatePlugin",
      "plugin": "wordpress-plugin-beats-upload-player-main/beats-upload-player.php",
      "capture": true
    },
    {
      "step": "runPHP",
      "code": "echo 'Plugin activated' . PHP_EOL;",
      "capture": true
    },
    {
      "step": "runPHP",
      "code": "echo 'Creating Beats Playground page' . PHP_EOL;",
      "capture": true
    },
    {
      "step": "createPost",
      "title": "Beats Playground",
      "slug": "beats-playground",
      "content": "<!-- wp:shortcode -->[beats_player_demo]<!-- /wp:shortcode -->",
      "capture": true
    },
    {
      "step": "runPHP",
      "code": "echo 'Page created, setting as homepage' . PHP_EOL;",
      "capture": true
    },
    {
      "step": "setHomepage",
      "pageId": "{{posts.beats-playground}}",
      "capture": true
    },
    {
      "step": "runPHP",
      "code": "echo 'Blueprint finished' . PHP_EOL;",
      "capture": true
    }
  ]
}
